<?xml version="1.0" encoding="ISO-8859-1"?>
<config>
    <log>
        <ident>schema</ident>
        <name>propel.log</name>
        <level>2</level>
        <type>file</type>
    </log>
    <propel>
        <datasources default="crm">
            <datasource id="crm">
                <adapter>mysql</adapter>
                <connection>
                    <!--<classname>PDO</classname>-->
                    <dsn>mysql:host=*****;dbname=*****</dsn>
                    <user>*****</user>
                    <password>*****</password>
                    <settings>
                        <setting id="charset">utf8</setting>
                    </settings>
                </connection>
            </datasource>
        </datasources>
    </propel>
</config>